#Dowload and install SRA toolkit 
#https://github.com/ncbi/sra-tools/wiki/02.-Installing-SRA-Toolkit
curl --output sratoolkit.tar.gz https://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/current/sratoolkit.current-mac64.tar.gz
tar -vxzf sratoolkit.tar.gz
export PATH=$PATH:$PWD/sratoolkit.3.0.7-mac64/bin  #modify directory name in sratoolkit.<release>-<platform> based on the downloaded version of sratoolkit

#Download the SRA accession number from the SRA Run Selector, save file "SRR_Acc_List.txt" to the current working directory.
#Get SRA files
prefetch $(<SRR_Acc_List.txt)
#Download fastq files
cat SraAccList.txt | xargs fasterq-dump --outdir "/your-directory/for-fastq"
